{
  "hooks": {
    "Notification": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "echo '[Claude] Notification triggered.'"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "StartPrompt",
        "hooks": [
          {
            "type": "command",
            "command": "claude chat --agent planner-agent --files prompt.txt"
          }
        ]
      }
    ],
    "Sub Agent Stop": [
      {
        "matcher": "planner-agent",
        "hooks": [
          {
            "type": "command",
            "command": "claude chat --agent spec-agent"
          }
        ]
      },
      {
        "matcher": "spec-agent",
        "hooks": [
          {
            "type": "command",
            "command": "claude chat --agent test-writer-agent"
          }
        ]
      },
      {
        "matcher": "test-writer-agent",
        "hooks": [
          {
            "type": "command",
            "command": "claude chat --agent impl-agent"
          }
        ]
      },
      {
        "matcher": "impl-agent",
        "hooks": [
          {
            "type": "command",
            "command": "claude chat --agent test-runner-agent"
          }
        ]
      }
    ]
  }
}